<%
=begin%>
 <!DOCTYPE html>
<html>
  <head>
    <title>MusicMemos</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.css">
    <%= stylesheet_link_tag    'login', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head> 
<%
=end%>

<h1>Login Page</h1>

<p><%= @error %></p>

<%= form_tag("/login", class: "ui form") do %>
  <div class = "field">
    <%= label_tag(:email, "Email:") %>
    <%= text_field_tag(:email) %><br>
  </div>
  <div class = "field">
    <%= label_tag(:password, "Password:") %>
    <%= password_field_tag(:password) %><br>
  </div>
  <%= submit_tag "Log In", class:"ui button" %>
<% end %>
<br>
<%= button_to "Sign Up", new_user_path, method: "get", class:"ui button" %>