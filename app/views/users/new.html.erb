<%
=begin%>
 <!DOCTYPE html>
<html>
  <head>
    <title>MusicMemos</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.css">
    <%= stylesheet_link_tag    'login', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head> 
<%
=end%>

<h1>Create a User</h1>

<% if flash[:errors] %>
  <% flash[:errors].map do |error| %>
      <p><%= error %></p>
  <% end %>
<% end %>

<%= form_for @user, :html => {:class => 'ui form'} do |f| %>
  <div class = "field">
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  </div>
  <div class = "field">
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  </div>
  <div class = "field">
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  </div>
  <%= f.submit "Create User", class:"ui button"  %>
<% end %>
<br>
<%= button_to "Back", login_path, method: "get", class:"ui button" %>