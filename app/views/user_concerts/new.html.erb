<h1>Select a Concert</h1>

<% if flash[:errors] %>
  <% flash[:errors].map do |error| %>
      <p><%= error %></p>
  <% end %>
<% end %>

<%= form_for @user_concert, :html => {:class => 'ui form'} do |f| %>
  <div class = "field">
    <%= f.collection_select :concert_id, @concerts, :id, :display, {class:"item"} %><br>
  </div>
  <div class = "field">
    <%= f.label :rating %>
    <%= f.number_field :rating %><br>
  </div>
  <div class = "field">
    <%= f.label :favorite_song %>
    <%= f.text_field :favorite_song %><br>
  </div>
  <div class = "field">
    <%= f.label :favorite %>
    <%= f.check_box :favorite, class: "largerCheckbox"%><br>
  </div>
  <%= f.submit "Save a Music Memo", class:"ui button" %>
<% end %>